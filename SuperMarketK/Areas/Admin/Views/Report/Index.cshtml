@model IEnumerable<SuperMarketK.Areas.Admin.Models.Report>
@{
    ViewBag.Title = "Báo cáo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<div class="d-flex">
    <h2 class="mr-auto p-2">REPORTS</h2>
    <form class="form-inline p-2">
        <div class="form-group mx-sm-3 mb-2">
            <input type="datetime" class="form-control" id="datepicker" placeholder="Ngày bắt đầu" name="dateFrom" value="@ViewBag.DateFrom">
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <input type="datetime" class="form-control" id="datepicker2" placeholder="Ngày kết thúc" name="dateTo" value="@ViewBag.DateTo">
        </div>
        <button type="submit" class="btn btn-success mb-2" id="btnXem">View</button>
    </form>
    @*<div class="p-2">@Html.ActionLink("Xuất PDF", "PrintPartialViewToPdf", null, new { @class = "btn btn-success" })</div>*@
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Table Report</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>
                            ID Product
                        </th>
                        <th>
                            Name Product
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Quantity in stock
                        </th>
                        <th>
                            Turnovers
                        </th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    $@item.DoanhThu.GetValueOrDefault().ToString("N0")
                </td>
            </tr>
                }
            </table>
        </div>
    </div>
</div>
<script>
    $('#datepicker').datepicker({
        uiLibrary: 'bootstrap4',
        format: 'yyyy-mm-dd'
    });
    $('#datepicker2').datepicker({
        uiLibrary: 'bootstrap4',
        format: 'yyyy-mm-dd'
    });
</script>






