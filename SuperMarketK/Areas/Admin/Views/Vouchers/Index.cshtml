@model PagedList.IPagedList<Model.EntityFramework.Vouchers>
@using PagedList.Mvc
@{
    ViewBag.Title = "Vouchers";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string statusDelete = ViewBag.GroupID == "ADMIN" ? "enable" : "disabled";
}

@section jsFooter{
    <script src="~/Assets/js/sb-admin-2.js"></script>
}

<div class="d-flex">
    <h2 class="mr-auto p-2">LIST VOUCHERS</h2>
    <div class="p-2">@Html.ActionLink("Create", "Create", null, new { @class = "btn btn-success" })</div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">User Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>
                            CODE
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Uses
                        </th>
                        <th>
                            Max_uses
                        </th>
                        <th>
                            Max_uses_user
                        </th>
                        <th>
                            Type
                        </th>
                        <th>
                            Discount_amount
                        </th>
                        <th>
                            Is_fixed
                        </th>
                        <th>
                            Starts
                        </th>
                        <th>
                            Expires
                        </th>
                        <th>
                            Condition
                        </th>
                        <th width="10%">
                            Action
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr id="row_@item.id">
                        <td>
                            @Html.DisplayFor(modelItem => item.code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.uses)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.max_uses)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.max_uses_user)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.discount_amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.is_fixed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.starts_at)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.expires_at)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.condition)
                        </td>
                        <td style="text-align: center">
                            @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @style = "color: #28a745", @class = "btnEdit" })
                            @Html.ActionLink(" ", "Details", new { id = item.id }, new { @class = "btnDetail ml-1 mr-1" })
                            @Ajax.ActionLink(" ", "Delete", new { id = item.id }, new AjaxOptions
                       {
                           Confirm = "Bạn có muốn xóa bản ghi này?",
                           OnComplete = "$('#row_" + @item.id + "').remove()",
                           HttpMethod = "Delete",
                       }, new { @style = "color: #dc3545", @class = @statusDelete + " btnDelete" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<script>$(".btnEdit").prepend("<i class='fa-solid fa-pen-to-square'></i> ");</script>
<script>$(".btnDetail").prepend("<i class='fa-solid fa-eye'></i> ");</script>
<script>$(".btnDelete").prepend("<i class='fa-solid fa-trash'></i> ");</script>

