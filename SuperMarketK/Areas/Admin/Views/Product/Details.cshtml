@model Model.EntityFramework.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    dt {
        margin: 3px 0px;
    }
</style>
<div class="d-flex">
    <h3 class="mr-auto p-2">THÔNG TIN SẢN PHẨM</h3>
    <div class="p-2">@Html.ActionLink("Sửa thông tin", "Edit", new { id = Model.ID }, new { @class = "btn btn-success" })</div>
    <div class="p-2">@Html.ActionLink("Back", "Index", null, new { @class = "btn btn-danger" })</div>
</div>
<div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">General Information</h6>
        </div>
        <div class="card-body">
            <div class="container d-flex justify-content-center">
                <div class="form-horizontal col-md-10">
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.Code)
                        </dt>

                        <dd>
                            @Html.TextBoxFor(model => model.Code, new { @class = "form-control border-left-primary" })
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control border-left-primary" })
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>

                        <dd>
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control border-left-primary" })
                        </dd>

                        <dt>
                            Thể loại
                        </dt>

                        <dd>
                            @Html.DropDownListFor(model => model.CategoryID, null, new { @class = "form-control border-left-primary" })
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>

                        <dd>
                            @Html.TextBoxFor(model => model.Price, new { @class = "form-control border-left-primary" })
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.PromotionPrice)
                        </dt>

                        <dd>
                            @Html.TextBoxFor(model => model.PromotionPrice, new { @class = "form-control border-left-primary" })
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </dt>

                        <dd>
                            @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control border-left-primary" })
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </dt>

                        <dd>
                            @Html.TextBoxFor(model => model.CreatedBy, new { @class = "form-control border-left-primary" })
                        </dd>

                        <dt>
                            Hình Ảnh
                        </dt>

                        <dd>
                            <img src="@Model.Image" alt="@Model.Name" class="img-thumbnail">
                            @*@Html.TextBoxFor(model => model.Image, new { @class = "form-control border-left-primary" })*@
                        </dd>
                    </dl>
                </div>

            </div>
        </div>
    </div>

</div>

