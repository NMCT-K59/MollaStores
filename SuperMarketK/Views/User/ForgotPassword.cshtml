@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="col-md-offset-5">Forgot Password</h2>
@using (Html.BeginForm("ForgotPassword", "User"))
{
    <div class="form-horizontal">
        <hr/>
        <div class="text-success col-md-offset-3" style="margin-bottom:10px">
            @ViewBag.Message
        </div>
        <div class="form-group">
            <label class="col-md-offset-3">Enter your email or mobile phone: </label>
            @Html.TextBox("EmailID","", new {@size= "72"})
        </div>
        <div class="form-group">
            <div class="col-md-offset-8">
                <input type="submit" value="Submit" class="btn btn-success"/>
            </div>
        </div>
    </div>
}
