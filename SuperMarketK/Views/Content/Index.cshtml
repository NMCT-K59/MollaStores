@model List<Model.EntityFramework.Content>
@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Model.EntityFramework.Content> listXemNhieu = (List<Model.EntityFramework.Content>)ViewBag.ListXemNhieu;
}
<main class="main">
    <div class="page-header text-center" style="background-image: url('Assets/assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Blog Classic<span>Blog</span></h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Blog</a></li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    @foreach (var item in Model)
                    {
                        <article class="entry">
                            <figure class="entry-media">
                                <a href="@("/blog/" + @item.MetaTitle + "--" + item.ID)">
                                    <img src="@item.Image" alt="image desc">
                                </a>
                            </figure><!-- End .entry-media -->

                            <div class="entry-body">
                                <div class="entry-meta">
                                    <span class="entry-author">
                                        by <a href="#">@item.CreatedBy</a>
                                    </span>
                                    <span class="meta-separator">|</span>
                                    <a href="#">@item.CreatedDate.Value.ToString("dd/MM/yyyy")</a>
                                    <span class="meta-separator">|</span>
                                    <a href="#">@item.ViewCount Views</a>
                                </div><!-- End .entry-meta -->

                                <h2 class="entry-title">
                                    <a href="@("/blog/" + @item.MetaTitle + "--" + item.ID)">@item.Name</a>
                                </h2><!-- End .entry-title -->

                                <div class="entry-content">
                                    <p>@item.Description</p>
                                    <a href="@("/blog/" + @item.MetaTitle + "--" + item.ID)" class="read-more">Continue Reading</a>
                                </div><!-- End .entry-content -->
                            </div><!-- End .entry-body -->
                        </article><!-- End .entry -->
                    }
