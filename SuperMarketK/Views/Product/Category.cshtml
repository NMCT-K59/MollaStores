                    @foreach (var item in listProduct)
                    {
                        <div class="col-6 col-md-4 col-lg-4 col-xl-3">
                            <div class="product">
                                <figure class="product-media">
                                    @if (item.PromotionPrice > 0)
                                    {<span class="product-label label-circle label-new">Sale</span>
                                    }
                                    <a href="/product/detail/@item.ID">
                                        <img src="@item.Image" alt="@item.Description" style="object-fit:cover; object-position:center" class="product-image setHeight">
                                    </a>
                                    <div class="product-action action-icon-top">
                                        <a data-id="@item.ID" class="btn-product btn-cart btnAddItem"><span>add to cart</span></a>
                                    </div><!-- End .product-action -->
                                </figure><!-- End .product-media -->

                                <div class="product-body">
                                    <div class="product-cat">
                                        <a href="#">@ViewBag.Keyword</a>
                                    </div><!-- End .product-cat -->
                                    <h3 class="product-title textTruncate"><a href="/product/detail/@item.ID">@item.Name</a></h3><!-- End .product-title -->
                                    @if (item.PromotionPrice > 0)
                                    {
                                        <div class="d-flex align-center">
                                            <div class="product-price" style="text-decoration: line-through; color: #929292">
                                                $@item.Price
                                            </div><!-- End .product-price -->
                                            <div class="product-price ml-2">
                                                $@item.PromotionPrice
                                            </div><!-- End .product-price -->
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="product-price">
                                            $@item.Price
                                        </div><!-- End .product-price -->

                                    }
                                    <div class="ratings-container">
                                        <div class="ratings">
                                            <div class="ratings-val" style="width: @(item.Rating/5*100)%;"></div><!-- End .ratings-val -->
                                        </div><!-- End .ratings -->
                                    </div><!-- End .rating-container -->

                                </div><!-- End .product-body -->
                            </div><!-- End .product -->
                        </div><!-- End .col-sm-6 col-lg-4 col-xl-3 -->
                    }
